keywords = {DNA computing,DNA origami,DNA sequence design algorithm,Hairpin,Polymerase chain reaction (PCR),Single nucleotide polymorphism (SNP),Single-base extension (SBE),stem-and-loop structure},
mendeley-groups = {.renaming Ferguson 1585748738041/Other DNA simulations and MSMs},
